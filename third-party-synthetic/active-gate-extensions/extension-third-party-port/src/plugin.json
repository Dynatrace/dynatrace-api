{
  "name": "custom.remote.python.thirdparty_port",
  "version": "1.013",
  "metricGroup": "tech.Port",
  "type": "python",
  "entity": "CUSTOM_DEVICE",
  "processTypeNames": [ "PYTHON" ],
  "technologies": [ "Port" ],
  "source": {
    "package": "port_extension",
    "className": "PortExtension",
    "install_requires": [ "dtapi" ],
    "activation": "Remote"
  },
  "properties": [
    {
      "key": "api_url",
      "type": "String"
    },
    {
      "key": "api_token",
      "type": "Password"
    },
    {
      "key": "test_name",
      "type": "String"
    },
    {
      "key": "test_target_ip",
      "type": "String"
    },
    {
      "key": "test_target_ports",
      "type": "String"
    },
    {
      "key": "test_target_protocol",
      "type": "Dropdown",
      "dropdownValues": [ "TCP", "UDP" ]
    },
    {
      "key": "test_location",
      "type": "String"
    },
    {
      "key": "log_level",
      "type": "Dropdown",
      "dropdownValues": [ "INFO", "DEBUG" ]
    },
    {
      "key": "frequency",
      "type": "String"
    },
    {
      "key": "proxy_address",
      "type": "String"
    },
    {
      "key": "proxy_username",
      "type": "String"
    },
    {
      "key": "proxy_password",
      "type": "Password"
    },
    {
      "key":  "failure_count",
      "type":  "Integer",
      "defaultValue":  1
    }

  ],
  "configUI": {
    "displayName": "Port check",
    "properties": [
      {
        "key": "api_url",
        "displayName": "Tenant URL",
        "displayHint": "https://localhost:9999/e/<environment_id> or https://<my.managed.host>/e/<environment_id> or https://<environment_id>.live.dynatrace.com",
        "displayOrder": 1
      },
      {
        "key": "api_token",
        "displayName": "API Token",
        "displayHint": "Requires \"Create and read synthetic monitors, locations, and nodes\" permission",
        "displayOrder": 2
      },
      {
        "key": "test_name",
        "displayName": "(Optional) Synthetic monitor name",
        "displayOrder": 6
      },
      {
        "key": "test_target_ip",
        "displayName": "Test target host",
        "displayHint": "IP address or hostname",
        "displayOrder": 3
      },
      {
        "key": "test_target_ports",
        "displayName": "Test target Ports",
        "displayHint": "Ports, separated by comma",
        "displayOrder": 4
      },
      {
        "key": "test_target_protocol",
        "displayName": "Test target Protocol",
        "displayHint": "TCP tries to open a socket, UDP tries to send a package",
        "displayOrder": 5
      },
      {
        "key": "frequency",
        "displayName": "(Optional) Frequency",
        "displayHint": "Frequency in minutes, default: 15",
        "displayOrder": 7
      },
      {
        "key": "test_location",
        "displayName": "(Optional) Location name",
        "displayHint": "Default: ActiveGate",
        "displayOrder": 8
      },
      {
        "key": "proxy_address",
        "displayName": "(Optional) Proxy Address",
        "displayOrder": 9

      },
      {
        "key": "proxy_username",
        "displayName": "(Optional) Proxy Username",
        "displayOrder": 10

      },
      {
        "key": "proxy_password",
        "displayName": "(Optional) Proxy Password",
        "displayOrder": 11

      },
      {
        "key": "log_level",
        "displayName": "Log level",
        "displayOrder": 12

      },
      {
          "key":  "failure_count",
          "displayName":  "Failure count",
          "displayOrder":  13,
          "displayHint":  "Number of consecutive failures before reporting error"
      }
    ]
  },
  "metrics": [
    {
      "entity": "CUSTOM_DEVICE",
      "timeseries": {
        "key": "port_extension_tests",
        "unit": "Count",
        "displayname": "Port Check - Tests"
      }
    }
  ]
}
