{
  "name": "custom.remote.python.thirdparty_dns",
  "version": "1.020",
  "type": "python",
  "entity": "CUSTOM_DEVICE",
  "technologies": [
    "DNS"
  ],
  "metricGroup": "tech.DNS",
  "source": {
    "package": "dns_extension",
    "className": "DNSExtension",
    "install_requires": [
      "dnspython3",
      "dt"
    ],
    "activation": "Remote"
  },
  "properties": [
    {
      "key": "api_url",
      "type": "String"
    },
    {
      "key": "api_token",
      "type": "Password"
    },
    {
      "key": "test_name",
      "type": "String"
    },
    {
      "key": "dns_server",
      "type": "String"
    },
    {
      "key": "host",
      "type": "String"
    },
    {
      "key": "test_location",
      "type": "String"
    },
    {
      "key": "test_timeout",
      "type": "Integer",
      "defaultValue": 2
    },
    {
      "key": "log_level",
      "type": "Dropdown",
      "dropdownValues": [
        "INFO",
        "DEBUG"
      ],
      "defaultValue": "INFO"
    },
    {
      "key": "frequency",
      "type": "String"
    },
    {
      "key": "proxy_address",
      "type": "String"
    },
    {
      "key": "proxy_username",
      "type": "String"
    },
    {
      "key": "proxy_password",
      "type": "Password"
    },
    {
      "key": "failure_count",
      "type": "Integer",
      "defaultValue": 1
    }
  ],
  "configUI": {
    "displayName": "DNS",
    "properties": [
      {
        "key": "api_url",
        "displayName": "Tenant URL",
        "displayHint": "https://localhost:9999/e/<environment_id> or https://<my.managed.host>/e/<environment_id> or https://<environment_id>.live.dynatrace.com",
        "displayOrder": 1
      },
      {
        "key": "api_token",
        "displayName": "API Token",
        "displayHint": "Requires \"Create and read synthetic monitors, locations, and nodes\" permission",
        "displayOrder": 2
      },
      {
        "key": "test_name",
        "displayName": "(Optional) Synthetic monitor name",
        "displayOrder": 5
      },
      {
        "key": "dns_server",
        "displayName": "DNS server",
        "displayHint": "IP address or hostname",
        "displayOrder": 3
      },
      {
        "key": "host",
        "displayName": "Test target host",
        "displayOrder": 4
      },
      {
        "key": "frequency",
        "displayName": "(Optional) Frequency",
        "displayHint": "Frequency in minutes, default: 15",
        "displayOrder": 6
      },
      {
        "key": "test_timeout",
        "displayName": "(Optional) Check Timeout",
        "displayHint": "Check timeout in seconds, if empty default value is 2 seconds",
        "displayOrder": 7
      },
      {
        "key": "test_location",
        "displayName": "(Optional) Location name",
        "displayHint": "Default: ActiveGate",
        "displayOrder": 8
      },
      {
        "key": "proxy_address",
        "displayName": "(Optional) Proxy Address",
        "displayOrder": 9
      },
      {
        "key": "proxy_username",
        "displayName": "(Optional) Proxy Username",
        "displayOrder": 10
      },
      {
        "key": "proxy_password",
        "displayName": "(Optional) Proxy Password",
        "displayOrder": 11
      },
      {
        "key": "log_level",
        "displayName": "Log level",
        "displayOrder": 12
      },
      {
          "key":  "failure_count",
          "displayName":  "Failure count",
          "displayOrder":  13,
          "displayHint":  "Number of consecutive failures before reporting error"
      }
    ]
  },
  "metrics": [
    {
      "entity": "CUSTOM_DEVICE",
      "timeseries": {
        "key": "dns_extension_tests",
        "unit": "Count",
        "displayname": "DNS Extension - Checks"
      }
    }
  ]
}
