{
  "name": "custom.remote.python.thirdparty_ping",
  "version": "1.2",
  "type": "python",
  "entity": "CUSTOM_DEVICE",
  "technologies": [ "ICMP" ],
  "metricGroup": "tech.Ping",
  "source": {
    "package": "ping_extension",
    "className": "PingExtension",
    "install_requires": [ "pingparsing", "dtapi" ],
    "activation": "Remote"
  },
  "properties": [
    {
      "key": "api_url",
      "type": "String"
    },
    {
      "key": "api_token",
      "type": "Password"
    },
    {
      "key": "test_name",
      "type": "String"
    },
    {
      "key": "test_target",
      "type": "String"
    },
    {
      "key": "test_location",
      "type": "String"
    },
    {
      "key": "log_level",
      "type": "Dropdown",
      "dropdownValues": [ "INFO", "DEBUG" ]
    },
    {
      "key": "frequency",
      "type": "String"
    },
    {
      "key": "proxy_address",
      "type": "String"
    },
    {
      "key": "proxy_username",
      "type": "String"
    },
    {
      "key": "proxy_password",
      "type": "Password"
    },
    {
      "key":  "failureCount",
      "type":  "integer",
      "defaultValue":  1
    }

  ],
  "configUI": {
    "displayName": "Ping",
    "properties": [
      {
        "key": "api_url",
        "displayName": "Tenant URL",
        "displayHint": "https://<my.managed.host>/e/<tenant_id> or https://<tenant_id>.live.dynatrace.com",
        "displayOrder": 1
      },
      {
        "key": "api_token",
        "displayName": "API Token",
        "displayHint": "Requires \"Create and read synthetic monitors, locations, and nodes\" permission",
        "displayOrder": 2
      },
      {
        "key": "test_name",
        "displayName": "(Optional) Synthetic monitor name",
        "displayOrder": 4
      },
      {
        "key": "test_target",
        "displayName": "Test target host",
        "displayHint": "IP address or hostname",
        "displayOrder": 3
      },
      {
        "key": "frequency",
        "displayName": "(Optional) Frequency",
        "displayHint": "Frequency in minutes, default: 15",
        "displayOrder": 6
      },
      {
        "key": "test_location",
        "displayName": "(Optional) Location name",
        "displayHint": "Default: ActiveGate",
        "displayOrder": 7
      },
      {
        "key": "proxy_address",
        "displayName": "(Optional) Proxy Address",
        "displayOrder": 8

      },
      {
        "key": "proxy_username",
        "displayName": "(Optional) Proxy Username",
        "displayOrder": 9

      },
      {
        "key": "proxy_password",
        "displayName": "(Optional) Proxy Password",
        "displayOrder": 10

      },
      {
        "key": "log_level",
        "displayName": "Log level",
        "displayOrder": 11

      },
      {
          "key":  "failureCount",
          "displayName":  "Failure count",
          "displayOrder":  12,
          "displayHint":  "Number of consecutive failures before reporting error"
      }

    ]
  },
  "metrics": [
    {
      "entity": "CUSTOM_DEVICE",
      "timeseries": {
        "key": "ping_extension_tests",
        "unit": "Count",
        "displayname": "Ping Extension - Checks"
      }
    }
  ]

}
