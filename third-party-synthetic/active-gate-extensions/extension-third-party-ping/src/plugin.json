{
  "name": "custom.remote.python.thirdparty_ping",
  "version": "1.021",
  "type": "python",
  "entity": "CUSTOM_DEVICE",
  "technologies": [ "ICMP" ],
  "metricGroup": "tech.Ping",
  "source": {
    "package": "ping_extension",
    "className": "PingExtension",
    "install_requires": [ "pingparsing", "dt", "charset-normalizer<3.0.0" ],
    "activation": "Remote"
  },
  "properties": [
    {
      "key": "api_token",
      "type": "Password"
    },
    {
      "key": "test_name",
      "type": "String"
    },
    {
      "key": "test_target",
      "type": "String"
    },
    {
      "key": "test_timeout",
      "type": "Integer",
      "defaultValue": 2
    },
    {
      "key": "test_location",
      "type": "String"
    },
    {
      "key": "log_level",
      "type": "Dropdown",
      "dropdownValues": [ "INFO", "DEBUG" ]
    },
    {
      "key": "frequency",
      "type": "String"
    },
    {
      "key": "proxy_address",
      "type": "String"
    },
    {
      "key": "proxy_username",
      "type": "String"
    },
    {
      "key": "proxy_password",
      "type": "Password"
    },
    {
      "key":  "failure_count",
      "type":  "Integer",
      "defaultValue":  1
    }

  ],
  "configUI": {
    "displayName": "Ping",
    "properties": [
      {
        "key": "api_token",
        "displayName": "API Token",
        "displayHint": "Requires \"Create and read synthetic monitors, locations, and nodes\" permission",
        "displayOrder": 20
      },
      {
        "key": "test_name",
        "displayName": "(Optional) Synthetic monitor name",
        "displayOrder": 40
      },
      {
        "key": "test_target",
        "displayName": "Test target host",
        "displayHint": "IP address or hostname",
        "displayOrder": 50
      },{
        "key": "test_timeout",
        "displayName": "(Optional) Ping Timeout",
        "displayHint": "Ping timeout in seconds, if empty default value is 2 seconds",
        "displayOrder": 55
      },
      {
        "key": "frequency",
        "displayName": "(Optional) Frequency",
        "displayHint": "Frequency in minutes, default: 15",
        "displayOrder": 60
      },
      {
        "key": "test_location",
        "displayName": "(Optional) Location name",
        "displayHint": "Default: ActiveGate",
        "displayOrder": 70
      },
      {
        "key": "proxy_address",
        "displayName": "(Optional) Proxy Address",
        "displayOrder": 80

      },
      {
        "key": "proxy_username",
        "displayName": "(Optional) Proxy Username",
        "displayOrder": 90

      },
      {
        "key": "proxy_password",
        "displayName": "(Optional) Proxy Password",
        "displayOrder": 100

      },
      {
        "key": "log_level",
        "displayName": "Log level",
        "displayOrder": 110

      },
      {
          "key":  "failure_count",
          "displayName":  "Failure count",
          "displayOrder":  120,
          "displayHint":  "Number of consecutive failures before reporting error"
      }

    ]
  },
  "metrics": [
    {
      "entity": "CUSTOM_DEVICE",
      "timeseries": {
        "key": "ping_extension_tests",
        "unit": "Count",
        "displayname": "Ping Extension - Checks"
      }
    }
  ]

}
